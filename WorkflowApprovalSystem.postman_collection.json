{
  "info": {
    "name": "Workflow Approval System API",
    "description": "Complete API collection for the Workflow Approval Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {"key": "baseUrl", "value": "http://localhost:8080", "type": "string"},
    {"key": "token", "value": "", "type": "string"},
    {"key": "workflowId", "value": "", "type": "string"}
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/api/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin_user\",\n  \"email\": \"admin@example.com\",\n  \"password\": \"password123\",\n  \"fullName\": \"Admin User\",\n  \"role\": \"ADMIN\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const res = pm.response.json();",
                  "if (res.data && res.data.token) {",
                  "  pm.collectionVariables.set('token', res.data.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Register Manager",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/api/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"manager_user\",\n  \"email\": \"manager@example.com\",\n  \"password\": \"password123\",\n  \"fullName\": \"Manager User\",\n  \"role\": \"MANAGER\"\n}"
            }
          }
        },
        {
          "name": "Register Employee",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/api/auth/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"employee_user\",\n  \"email\": \"employee@example.com\",\n  \"password\": \"password123\",\n  \"fullName\": \"Employee User\",\n  \"role\": \"EMPLOYEE\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "url": "{{baseUrl}}/api/auth/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin_user\",\n  \"password\": \"password123\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const res = pm.response.json();",
                  "if (res.data && res.data.token) {",
                  "  pm.collectionVariables.set('token', res.data.token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/users/me"
          }
        },
        {
          "name": "Get All Users (Admin only)",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/users"
          }
        },
        {
          "name": "Get Users By Role",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/users/by-role/MANAGER"
          }
        },
        {
          "name": "Get User By ID",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/users/1"
          }
        },
        {
          "name": "Deactivate User (Admin only)",
          "request": {
            "method": "PATCH",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/users/2/deactivate"
          }
        }
      ]
    },
    {
      "name": "Workflows",
      "item": [
        {
          "name": "Create Workflow",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": "{{baseUrl}}/api/workflows",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Budget Approval Request Q1 2024\",\n  \"description\": \"Requesting approval for Q1 2024 marketing budget of $50,000\",\n  \"metadata\": \"{\\\"amount\\\": 50000, \\\"department\\\": \\\"Marketing\\\"}\",\n  \"approvalSteps\": [\n    {\n      \"approverId\": 2,\n      \"level\": 1,\n      \"stepName\": \"Manager Approval\"\n    },\n    {\n      \"approverId\": 3,\n      \"level\": 2,\n      \"stepName\": \"Director Approval\"\n    }\n  ]\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const res = pm.response.json();",
                  "if (res.data && res.data.id) {",
                  "  pm.collectionVariables.set('workflowId', res.data.id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Workflow By ID",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/workflows/{{workflowId}}"
          }
        },
        {
          "name": "Get My Workflows",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": {
              "raw": "{{baseUrl}}/api/workflows/my?page=0&size=10",
              "query": [
                {"key": "page", "value": "0"},
                {"key": "size", "value": "10"}
              ]
            }
          }
        },
        {
          "name": "Get All Workflows (Admin/Manager)",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/workflows?page=0&size=10"
          }
        },
        {
          "name": "Get Workflows By Status",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/workflows/status/PENDING?page=0&size=10"
          }
        },
        {
          "name": "Submit Workflow",
          "request": {
            "method": "POST",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/workflows/{{workflowId}}/submit"
          }
        },
        {
          "name": "Approve Workflow",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": "{{baseUrl}}/api/workflows/{{workflowId}}/approve",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"action\": \"APPROVE\",\n  \"comments\": \"Looks good! Budget approved for Q1.\"\n}"
            }
          }
        },
        {
          "name": "Reject Workflow",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": "{{baseUrl}}/api/workflows/{{workflowId}}/approve",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"action\": \"REJECT\",\n  \"comments\": \"Budget exceeded quarterly limit. Please revise.\"\n}"
            }
          }
        },
        {
          "name": "Request Changes",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "url": "{{baseUrl}}/api/workflows/{{workflowId}}/approve",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"action\": \"REQUEST_CHANGES\",\n  \"comments\": \"Please add detailed breakdown of expenses.\"\n}"
            }
          }
        },
        {
          "name": "Cancel Workflow",
          "request": {
            "method": "POST",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/workflows/{{workflowId}}/cancel"
          }
        },
        {
          "name": "Get Pending Workflows For Me",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/workflows/pending-for-me"
          }
        },
        {
          "name": "Get Workflow History",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "{{baseUrl}}/api/workflows/{{workflowId}}/history"
          }
        }
      ]
    }
  ]
}
